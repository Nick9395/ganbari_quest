<!-- app/views/session/new.html.erb -->
<div class='center-container'>
  <h1><%= t('sessions.new.title') %></h1>

  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <div class='form-group'>
      <%= label_tag :email, t('activerecord.attributes.user.email') %>
      <%= email_field_tag :email, params[:email], placeholder: t('placeholders.email') %>
    </div>
    <div class='form-group'>
      <%= label_tag :password, t('activerecord.attributes.user.password') %>
      <%= password_field_tag :password, nil, placeholder: t('placeholders.password') %>
    </div>
    <br>
    <%= link_to t('sessions.new.no_account'), new_user_path, class: 'link-page' %>
    <br><br>
    <%= submit_tag t('sessions.new.login'),
      class: 'custom-button-01',
      data: {
        controller: 'delayed-submit',
        action: 'click->delayed-submit#handle',
        delayed_submit_delay_value: 1700
      } %>
    <br><br>
    <%= link_to t('sessions.new.back'), root_path, class: 'rpg-link' %>
  <% end %>
</div>
